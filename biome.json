{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"files": {
		"ignoreUnknown": true,
		"ignore": ["**/node_modules/", "dist"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": ["**/node_modules/", "**/dist/"],
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"enabled": true,
			"jsxQuoteStyle": "single",
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "none"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"enabled": false,
		"ignore": ["**/node_modules/", "**/dist/"],
		"rules": {}
	},
	"organizeImports": {
		"enabled": true
	}
}
